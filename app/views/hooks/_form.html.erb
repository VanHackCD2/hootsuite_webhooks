<%= form_for(@hook, url: url, class: "form-horizontal") do |f| %>
  <div class="box-body">
    <div class="form-group">
      <%= f.label :url, class: "col-sm-2 control-label" %>

      <div class="col-sm-10">
        <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
      </div>

      <br />
    </div>

    <div class="box-footer">
      <%= f.submit class: "btn btn-primary" %>

      <%= link_to hooks_path, class: "btn btn-default" do %><i class="fa fa-undo"></i><%= t('actions.back') %><% end %>
    </div>
  </div>
<% end %>
